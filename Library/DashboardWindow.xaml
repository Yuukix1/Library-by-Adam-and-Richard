<Window x:Class="Library.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Dashboard" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="BookGrid" AutoGenerateColumns="True" IsReadOnly="True" SelectionMode="Single"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Rent Book" Width="100" Margin="5" Click="Rent_Click"/>
            <Button Content="Buy Book" Width="100" Margin="5" Click="Buy_Click"/>
        </StackPanel>
    </Grid>
</Window>
